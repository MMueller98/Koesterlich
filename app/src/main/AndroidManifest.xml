    package="com.koesterlich">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Koesterlich">
        <activity
            android:name=".activities.CookingMode"
            android:exported="true"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".activities.Testground"
            android:exported="true" />
        <activity
            android:name=".activities.Cookbook"
            android:exported="true" />
        <activity
            android:name=".activities.RecipeDisplay"
            android:exported="true" />
        <activity android:name=".activities.RecipeDatabase" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>